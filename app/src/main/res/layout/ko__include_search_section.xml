<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ko__search_section_background_color"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:padding="16dp">

    <com.kayako.sdk.android.k5.common.view.RegularTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:singleLine="true"
        android:text="@string/ko__search_bar_how_can_we_help_you"
        android:textColor="@color/ko__search_bar_welcome_text_color"
        android:textSize="20sp" />

    <com.kayako.sdk.android.k5.common.view.RegularTextView
        android:id="@+id/ko__search_edittext"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/search_bar"
        android:drawableLeft="@drawable/search"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp" />

</LinearLayout>