<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ko__section_background_colour"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ko__article_author_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginRight="16dp"
        android:scaleType="center" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.kayako.sdk.android.k5.common.view.BoldTextView
            android:id="@+id/ko__article_author_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="Neil Mathew" />

        <!-- TODO: Add support for ISO Times - dates -->

        <com.kayako.sdk.android.k5.common.view.RegularTextView
            android:id="@+id/ko__article_last_updated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Posted 2 years ago"
            android:textColor="@color/ko__dark_gray_text_color"
            android:textSize="14sp" />

        <com.kayako.sdk.android.k5.common.view.RegularTextView
            android:id="@+id/ko__article_last_created"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Updated 3 months ago"
            android:textColor="@color/ko__dark_gray_text_color"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>