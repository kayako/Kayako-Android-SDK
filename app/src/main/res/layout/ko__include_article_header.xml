<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ko__section_background_colour"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/ko__article_directory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textSize="14sp"
        tools:text="Getting Started > Zapier Integration" />

    <TextView
        android:id="@+id/ko__article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="How do I use Zapier to make something do something else?" />

</LinearLayout>