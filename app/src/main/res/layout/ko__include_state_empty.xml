<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    app:theme="@style/Ko__AppTheme">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerInside"
        android:src="@drawable/emptybusstop" />

    <TextView
        android:id="@+id/ko__empty_state_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="@color/ko__light_gray_text_color"
        android:text="@string/ko__label_empty_view_title"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/ko__empty_state_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/ko__light_gray_text_color"
        android:text="@string/ko__label_empty_view_description"
        android:textSize="16sp" />


    <!--TODO: Use images from sketch -->

</LinearLayout>